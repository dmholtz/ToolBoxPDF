<Page
    x:Class="UniPDF_UWP.FutureFeaturesFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch">
        <controls:MarkdownTextBlock x:Name="MarkdownContent"
                                  Margin="6" Padding="5" LinkClicked="MarkdownContent_LinkClicked" />
    </ScrollViewer>

</Page>
